{
  "name": "@llamaindex/chat-ui",
  "version": "0.0.2",
  "types": "./dist/index.d.ts",
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    "./styles/katex.css": "./dist/styles/katex.css",
    "./styles/code.css": "./dist/styles/code.css",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./widgets": {
      "types": "./dist/widgets.d.ts",
      "default": "./dist/widgets.js"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "pnpm run clean && pnpm run copy:css && pnpm run build:js",
    "copy:css": "mkdir dist\\styles 2>nul & xcopy /E /I src\\styles dist\\styles",
    "build:js": "tsc --project tsconfig.build.json --outDir dist",
    "lint": "eslint src/",
    "dev": "pnpm run copy:css && pnpm run build:js --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "copy": "cp -r ../../README.md ../../LICENSE .",
    "postbuild": "pnpm run copy"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@llamaindex/eslint-config": "workspace:*",
    "@llamaindex/tailwind-config": "workspace:*",
    "@llamaindex/typescript-config": "workspace:*",
    "@types/react": "^18.2.61",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@llamaindex/pdf-viewer": "^1.1.3",
    "@radix-ui/react-collapsible": "^1.0.3",
    "@radix-ui/react-hover-card": "^1.0.7",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.453.0",
    "tailwind-merge": "^2.1.0",
    "vaul": "^0.9.1",
    "highlight.js": "^11.10.0",
    "react-markdown": "^8.0.7",
    "rehype-katex": "^7.0.0",
    "remark": "^14.0.3",
    "remark-code-import": "^1.2.0",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
